{
  "manifest_version": 3,
  "name": "ChatGPT Sidebar",
  "version": "0.1",
  "description": "Personal Chrome sidebar for ChatGPT using your own account (not affiliated with OpenAI).",
  "permissions": [
    "sidePanel",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "js/sidepanel-service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["js/sidepanel-chat-sync.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/sidebar_16.png",
    "32": "images/sidebar_32.png",
    "48": "images/sidebar_48.png",
    "64": "images/sidebar_64.png",
    "128": "images/sidebar_128.png"
  },
  "side_panel": {
    "default_path": "sidebar-panel.html"
  },
  "action": {
    "default_title": "ChatGPT Sidebar",
    "default_icon": {
      "16": "images/sidebar_16.png",
      "32": "images/sidebar_32.png",
      "48": "images/sidebar_48.png",
      "64": "images/sidebar_64.png",
      "128": "images/sidebar_128.png"
    }
  }
}
