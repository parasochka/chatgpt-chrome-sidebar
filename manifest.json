{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "version": "1.0",
  "default_locale": "en",
  "description": "__MSG_appDescription__",
  "permissions": [
    "sidePanel",
    "declarativeNetRequestWithHostAccess",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.openai.com/*"
  ],
  "background": {
    "service_worker": "js/sidepanel-service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.openai.com/*"
      ],
      "js": [
        "js/chatgpt-overrides.js",
        "js/chatgpt-sidebar-sections.js"
      ],
      "css": [
        "css/chatgpt-overrides.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "images/sidebar_16.png",
    "32": "images/sidebar_32.png",
    "48": "images/sidebar_48.png",
    "64": "images/sidebar_64.png",
    "128": "images/sidebar_128.png"
  },
  "side_panel": {
    "default_path": "sidebar-panel.html"
  },
  "action": {
    "default_title": "__MSG_actionTitle__",
    "default_icon": {
      "16": "images/sidebar_16.png",
      "32": "images/sidebar_32.png",
      "48": "images/sidebar_48.png",
      "64": "images/sidebar_64.png",
      "128": "images/sidebar_128.png"
    }
  }
}
