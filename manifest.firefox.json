{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "version": "0.4",
  "default_locale": "en",
  "description": "__MSG_appDescription__",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "js/sidepanel-service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["js/chatgpt-copy-fix.js"],
      "css": ["css/chatgpt-overrides.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "images/sidebar_16.png",
    "32": "images/sidebar_32.png",
    "48": "images/sidebar_48.png",
    "64": "images/sidebar_64.png",
    "128": "images/sidebar_128.png"
  },
  "action": {
    "default_title": "__MSG_actionTitle__",
    "default_icon": {
      "16": "images/sidebar_16.png",
      "32": "images/sidebar_32.png",
      "48": "images/sidebar_48.png",
      "64": "images/sidebar_64.png",
      "128": "images/sidebar_128.png"
    }
  },
  "sidebar_action": {
    "default_title": "ChatGPT Sidebar",
    "default_panel": "sidebar-panel.html",
    "open_at_install": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgpt-sidebar@yourdomain",
      "strict_min_version": "115.0"
    }
  }
}
